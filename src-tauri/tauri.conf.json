    },
    "windows": [
      {
        "title": "PassForge",
        "label": "main",
        "url": "index.html",
        "width": 450,
        "height": 700,
        "fullscreen": false,
        "focus": true,
        "resizable": false,
        "decorations": true,
        "center": true
      }
    ]
  }
}
